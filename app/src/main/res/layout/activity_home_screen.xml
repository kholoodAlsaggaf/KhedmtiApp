
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/new_back"
android:orientation="vertical"
    tools:context="android.KhedmtiApp.HomeScreen">

<LinearLayout
    android:id="@+id/textView_welcome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6da5f9"
    android:gravity="center"
    android:orientation="horizontal">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:text="خـدمتي"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="list"
        android:src="@drawable/list" />


</LinearLayout>
    <TabHost android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TabWidget
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabs"
            />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/tabcontent"
            >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tab1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageView11"
                        android:src="@drawable/graphic"
                        android:layout_alignTop="@+id/imageView10"
                        android:layout_toRightOf="@+id/imageView10"
                        android:layout_toEndOf="@+id/imageView10" />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:id="@+id/imageView10"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/photography"
                        android:layout_marginTop="70dp" />



                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/imageView12"
                        android:src="@drawable/webd"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageView10" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView13"
                        android:layout_below="@+id/imageView12"
                        android:layout_alignRight="@+id/imageView11"
                        android:layout_alignEnd="@+id/imageView11"
                        android:src="@drawable/web"
                        android:layout_toRightOf="@+id/imageView12"
                        android:layout_toEndOf="@+id/imageView12" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView25"
            android:src="@drawable/webd"
            android:layout_alignTop="@+id/imageView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tab2"
                android:orientation="vertical"
                android:paddingTop="60px"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="100px"
                    android:text="This is tab 2"
                    android:id="@+id/txt2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tab3"
                android:orientation="vertical"
                android:paddingTop="60px"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="100px"
                    android:text="This is tab 3"
                    android:id="@+id/txt3"
                    />

            </LinearLayout>

        </FrameLayout>

    </TabHost>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="200dp">



        <LinearLayout
            android:id="@+id/home1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:onClick="GoHome">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/hom" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifications1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:onClick="GoNotifications">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/noti" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:onClick="GoProfile">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/pro" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>