
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#dcd9d9"
android:orientation="vertical"
    tools:context="android.KhedmtiApp.Search">

<LinearLayout
    android:id="@+id/textView_welcome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6da5f9"
    android:gravity="center"
    android:orientation="horizontal">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:text="خـدمتي"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="left"
        android:src="@drawable/left" />


</LinearLayout>

    <TabHost android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <TabWidget
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabs"
            />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/tabcontent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:id="@+id/tab11"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">


                <SearchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/tab2"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="اختر نوع الخدمة"
                    android:id="@+id/textView36"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#322424"
                    android:textSize="30dp"
                    android:background="#e6e0e0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صيانة برمجيات"
                    android:id="@+id/radioButton7"
                    android:textAlignment="center"
                    android:layout_above="@+id/radioButton9"
                    android:layout_toRightOf="@+id/radioButton9"
                    android:layout_toEndOf="@+id/radioButton9" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تصوير"
                    android:id="@+id/radioButton8"
                    android:layout_alignBottom="@+id/textView36"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تطوير مواقع"
                    android:id="@+id/radioButton9"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/radioButton8"
                    android:layout_alignParentLeft="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تصميم جرافيكس"
                    android:id="@+id/radioButton10"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/radioButton9"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText32"
                    android:text="المدينة"
                    android:layout_alignBottom="@+id/radioButton10"
                    android:layout_alignRight="@+id/textView36"
                    android:layout_alignEnd="@+id/textView36" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText33"
                    android:text="السعر"
                    android:layout_below="@+id/editText32"
                    android:layout_alignLeft="@+id/textView36"
                    android:layout_alignStart="@+id/textView36" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="الفئة:"
                    android:id="@+id/textView38"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#322424"
                    android:textSize="30dp"
                    android:background="#e6e0e0"
                    android:layout_below="@+id/editText33"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الأكثر طلباً"
                    android:id="@+id/radioButton11"
                    android:layout_alignBottom="@+id/textView38"
                    android:layout_alignLeft="@+id/editText32"
                    android:layout_alignStart="@+id/editText32" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المقترحة"
                    android:id="@+id/radioButton12"
                    android:layout_alignBottom="@+id/radioButton11"
                    android:layout_toLeftOf="@+id/radioButton11"
                    android:layout_toStartOf="@+id/radioButton11" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بحث"
                    android:id="@+id/button15"
                    android:layout_below="@+id/textView38"
                    android:layout_alignLeft="@+id/radioButton12"
                    android:layout_alignStart="@+id/radioButton12"
                    android:background="#6da5f9" />

            </RelativeLayout>



        </FrameLayout>

    </TabHost>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/home1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="#c2bdbd"
            android:gravity="center"
            android:onClick="GoHome">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/hom" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifications1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#c2bdbd"
            android:gravity="center"
            android:onClick="GoNotifications">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/noti" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#c2bdbd"
            android:gravity="center"
            android:onClick="GoProfile">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/pro" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>