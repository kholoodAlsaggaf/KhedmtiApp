<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".RegistrationFormActivity"
    android:background="#f0f0f0">



    <LinearLayout

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"

        android:orientation="vertical"
        android:weightSum="1">



        <TextView

            android:id="@+id/textView1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:text="تسجيل كعميل"

            android:textAppearance="?android:attr/textAppearanceLarge" />











        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:inputType="textWebEmailAddress"
            android:text="الاسم الأول" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:inputType="textWebEmailAddress"
            android:text="الاسم الاخير" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:inputType="textWebEmailAddress"
            android:text="البريد الإلكتروني" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:inputType="textWebEmailAddress"
            android:text="كلمة المرور"
            android:password="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.83">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="اختر اهتماماتك"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/checkBox2"
                android:textColor="#1d9de2"
                android:layout_above="@+id/checkBox1"
                android:background="#3be8e6e6"
                android:layout_toRightOf="@+id/checkBox2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تصميم جرافيكس"
                android:id="@+id/checkBox1"
                android:checked="false"
                android:layout_below="@+id/checkBox3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تصوير"
                android:id="@+id/checkBox2"
                android:checked="false"
                android:layout_above="@+id/checkBox1"
                android:layout_centerHorizontal="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تطوير مواقع"
                android:id="@+id/checkBox3"
                android:layout_below="@+id/checkBox2"
                android:layout_alignLeft="@+id/checkBox2"
                android:layout_alignStart="@+id/checkBox2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تطوير تطبيقات جوال"
                android:id="@+id/checkBox3"
                android:layout_below="@+id/checkBox3"
                android:layout_alignLeft="@+id/checkBox3"
                android:layout_alignStart="@+id/checkBox3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صيانة برمجيات"
                android:id="@+id/checkBox5"
                android:layout_below="@+id/checkBox1"
                android:layout_alignLeft="@+id/checkBox3"
                android:layout_alignStart="@+id/checkBox3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="قراؤة الشروط"
                android:id="@+id/textView4"
                android:textColor="#1d9de2"
                android:background="#3be8e6e6"
                android:layout_below="@+id/checkBox5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل"
                android:id="@+id/button7"
                android:background="#6da5f9"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أوافق"
                android:id="@+id/radioButton"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لا أوافق"
                android:id="@+id/radioButton2"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/radioButton"
                android:layout_alignStart="@+id/radioButton" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>